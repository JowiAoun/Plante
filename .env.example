# Google OAuth Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Configuration
# NEXTAUTH_URL should be your site URL (http://localhost:3000 in development)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Gemini API Configuration (for AI Chat)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs Configuration (for Voice/TTS)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Sentry Configuration (Error Tracking & Monitoring)
# Get your DSN from: https://sentry.io/settings/projects/{project}/keys/
# IMPORTANT: NEXT_PUBLIC_SENTRY_DSN is needed for client-side error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ENVIRONMENT=development
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=plante

# MongoDB Configuration (User Data Storage)
# Get connection string from MongoDB Atlas: https://cloud.mongodb.com
# Or use local: mongodb://localhost:27017/plante
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/plante?retryWrites=true&w=majority

# Twilio SMS Configuration
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Rate limiting
TWILIO_DAILY_LIMIT=50
TWILIO_COOLDOWN_MINUTES=15

# REQUIRED for demo/hackathon: Override recipient
# All SMS will be sent to this verified number regardless of user settings
TWILIO_RECIPIENT_OVERRIDE=+1234567890

# Survey Monkey
SURVEY_MONKEY_CLIENT_ID=your_survey_monkey_client_id_here
SURVEY_MONKEY_CLIENT_SECRET=your_survey_monkey_client_secret_here

# Raspberry Pi Sensor API
# URL to the Pi sensor API (via Cloudflare Tunnel or Tailscale)
# See hardware/NETWORKING.md for setup instructions
PI_API_URL=https://pi-sensors.yourdomain.com
PI_API_KEY=your_pi_api_key_here
